  <front>
    <title abbrev='6LoWPAN Privacy Addresses'>Enabling Privacy Addressing With 6LoWPAN Technologies</title>
    <author initials='D.' surname='Thaler' fullname='Dave Thaler'>
      <organization>Microsoft</organization>
      <address>
        <postal>
